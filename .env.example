# Environment Configuration for Queue SDK

# Application
APP_NAME=queue-sdk
APP_ENV=development
APP_DEBUG=true

# AWS SQS Configuration
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/your-queue-name
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# SQS Specific Settings
SQS_MAX_MESSAGES=1
SQS_WAIT_TIME_SECONDS=30
SQS_VISIBILITY_TIMEOUT=0

# Apache Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_GROUP_ID=queue-sdk-group
KAFKA_TOPIC=default-topic
KAFKA_TIMEOUT=30000

# General Queue Settings
QUEUE_MAX_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5
QUEUE_LOG_LEVEL=info

# Docker Development
COMPOSE_PROJECT_NAME=queue-sdk
XDEBUG_MODE=debug
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003

# Testing
PHPUNIT_RESULT_CACHE=.phpunit.result.cache
