{
    "name": "queue-sdk/queue-sdk",
    "type": "library",
    "description": "SDK PHP para consumo de eventos de mensageria com suporte a Kafka, SQS e outras implementações usando Arquitetura Hexagonal.",
    "keywords": ["php", "queue", "kafka", "sqs", "messaging", "event-driven", "hexagonal-architecture", "sdk"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "aws/aws-sdk-php": "^3.320"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.62",
        "kwn/php-rdkafka-stubs": "^2.2",
        "mockery/mockery": "^1.4.4",
        "phpunit/phpunit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "QueueSDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "php -d memory_limit=-1 vendor/bin/phpunit --testdox --no-coverage",
        "test-coverage": "XDEBUG_MODE=coverage php -d memory_limit=-1 vendor/bin/phpunit --coverage-html=coverage",
        "cs-check": "vendor/bin/php-cs-fixer fix -v --using-cache no --dry-run --stop-on-violation",
        "cs-fix": "vendor/bin/php-cs-fixer fix --show-progress=dots"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
