    <script>
        // Dashboard state
        let dashboard = {
            data: [],
            chart: null,
            lastUpdate: null
        };

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function() {
            initializeChart();
            loadTestResults();
            updateTimestamp();

            // Auto-refresh every 30 seconds
            setInterval(function() {
                loadTestResults();
                updateTimestamp();
            }, 30000);
        });

        // Initialize performance chart
        function initializeChart() {
            const ctx = document.getElementById('performanceChart').getContext('2d');
            dashboard.chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Leve', 'MÃ©dio', 'Pesado'],
                    datasets: [{
                        label: 'Producer (msg/s)',
                        data: [0, 0, 0],
                        backgroundColor: 'rgba(59, 130, 246, 0.6)',
                        borderColor: 'rgba(59, 130, 246, 1)',
                        borderWidth: 1
                    }, {
                        label: 'Consumer (msg/s)',
                        data: [0, 0, 0],
                        backgroundColor: 'rgba(16, 185, 129, 0.6)',
                        borderColor: 'rgba(16, 185, 129, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Mensagens por Segundo'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Performance Comparativa'
                        }
                    }
                }
            });
        }

        // Load test results from JSON files
        async function loadTestResults() {
            try {
                const response = await fetch('/api/test-results');
                const data = await response.json();

                if (data.success) {
                    updateDashboard(data.results);
                    // Passar dados completos para a tabela
                    updateTestResultsTable(data);
                } else {
                    // Simulate data for demo
                    updateDashboard(generateSampleData());
                }
            } catch (error) {
                console.log('Using sample data for demonstration');
                updateDashboard(generateSampleData());
            }
        }

        // Generate sample data for demonstration
        function generateSampleData() {
            return {
                connectivity: { status: 'passed' },
                simple_test: {
                    producer: { sent: 5, rate: 25.3, errors: 0 },
                    consumer: { processed: 5, rate: 23.1, errors: 0 },
                    success_rate: 100.0
                },
                performance: {
                    'Leve': {
                        producer: { rate: 47.2, errors: 0 },
                        consumer: { rate: 45.2, errors: 0 },
                        efficiency: 95.8
                    },
                    'MÃ©dio': {
                        producer: { rate: 52.1, errors: 0 },
                        consumer: { rate: 48.9, errors: 0 },
                        efficiency: 93.9
                    },
                    'Pesado': {
                        producer: { rate: 48.7, errors: 1 },
                        consumer: { rate: 44.2, errors: 1 },
                        efficiency: 90.8
                    }
                },
                timestamp: new Date().toISOString()
            };
        }

        // Update dashboard with new data
        function updateDashboard(data) {
            dashboard.data = data;

            // Update connectivity status
            updateConnectivityStatus(data.connectivity);

            // Update summary cards
            updateSummaryCards(data);

            // Update chart
            updateChart(data.performance);

            // Update consumption analysis
            updateConsumptionAnalysis(data);

            // Table serÃ¡ atualizada separadamente em loadTestResults
        }

        // Update connectivity status
        function updateConnectivityStatus(connectivity) {
            const statusElement = document.getElementById('connectivityStatus');
            const isPassed = connectivity && connectivity.status === 'passed';

            statusElement.innerHTML = `
                <span class="status-dot ${isPassed ? 'status-passed' : 'status-failed'}"></span>
                <span class="text-sm ${isPassed ? 'text-green-600' : 'text-red-600'}">
                    ${isPassed ? 'Conectado' : 'Falha na conexÃ£o'}
                </span>
            `;
        }

        // Update summary cards
        function updateSummaryCards(data) {
            // Total tests - usar data.summary da API
            const testsCount = data.summary ? data.summary.totalTests : 0;
            document.getElementById('totalTests').textContent = testsCount;

            // Success rate - calcular com base na eficiÃªncia mÃ©dia
            const avgEfficiency = data.summary ? data.summary.avgEfficiency : 0;
            document.getElementById('successRate').textContent = avgEfficiency.toFixed(1) + '%';

            // Best performance - encontrar a maior taxa de consumer nos resultados
            let bestRate = 0;
            if (data.performance && Array.isArray(data.performance)) {
                data.performance.forEach(perf => {
                    if (perf.consumer > bestRate) {
                        bestRate = perf.consumer;
                    }
